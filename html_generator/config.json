{
    "background_image_url": "https://giffiles.alphacoders.com/214/214384.gif", 
    "title": "Remote Power\n Management Server",
    "target": "http://127.0.0.1:5000/",
    "form_elements": [
        {
            "header": {
                "header_text": "Password:"
            }
        },
        {
            "password": {
                "input_name": "password",
                "placeholder": "password"
            }
        },
        {
            "header": {
                "header_text": "Options:"
            }
        },
        {
            "grouped_radio": {
                "input_name": "mode",
                "radio_options": [
                    {
                        "option_label": "Turn On",
                        "option_value": "on"
                    },
                    {
                        "option_label": "Turn Off",
                        "option_value": "off"
                    }
                ]
            }
        },
        {
            "submit": {
                "value": "Send",
                "font_size": "1.2rem",
                "font_weight": 600
            }
        }        
    ]
}